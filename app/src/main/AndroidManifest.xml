<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.polan.studentdatabase">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/db_launcher"
        android:label=""
        android:roundIcon="@mipmap/db_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Splash"
            android:label="Student Database">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Mainpage"
            android:label="Student Database"></activity>
        <activity
            android:name=".Inputpage"
            android:label="Student Database"></activity>
        <activity
            android:name=".Displaypage"
            android:parentActivityName=".Inputpage"
            android:label="Student Database"></activity>
    </application>

</manifest>